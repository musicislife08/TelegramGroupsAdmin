<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <style>
        /* Use system fonts instead of Google Fonts for better performance and offline support */
        body, .mud-typography {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }

        /* ApexCharts dark theme fixes for axis labels and text */
        .apexcharts-text,
        .apexcharts-xaxis-label,
        .apexcharts-yaxis-label,
        .apexcharts-yaxis-title-text,
        .apexcharts-xaxis-title-text {
            fill: rgba(255, 255, 255, 0.87) !important;
        }

        .apexcharts-gridline {
            stroke: rgba(255, 255, 255, 0.12) !important;
        }

        .apexcharts-legend-text {
            color: rgba(255, 255, 255, 0.87) !important;
        }

        .apexcharts-tooltip {
            background: #424242 !important;
            color: rgba(255, 255, 255, 0.87) !important;
            border: 1px solid rgba(255, 255, 255, 0.12) !important;
        }

        .apexcharts-tooltip-title {
            background: #303030 !important;
            border-bottom: 1px solid rgba(255, 255, 255, 0.12) !important;
        }
    </style>
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="TelegramGroupsAdmin.styles.css" />
    <ImportMap />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    <Routes @rendermode="PageRenderMode"/>
    <ReconnectModal />
    <script src="_framework/blazor.web.js"></script>
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
    <script src="js/app.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.min.js"></script>
</body>

@code {
    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    private IComponentRenderMode? PageRenderMode
        => HttpContext?.AcceptsInteractiveRouting() == true
            ? InteractiveServer
            : null;
}

</html>
