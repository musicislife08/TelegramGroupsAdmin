@using Microsoft.EntityFrameworkCore
@using TelegramGroupsAdmin.Data
@using TelegramGroupsAdmin.ContentDetection.Repositories
@inject IStopWordsRepository StopWordsRepository
@inject IMessageStatsService MessageStatsService
@inject IDetectionResultsRepository DetectionResultsRepository
@inject IDbContextFactory<AppDbContext> DbContextFactory
@inject ISnackbar Snackbar


<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
    <MudStack Spacing="4">
        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
            <MudText Typo="Typo.h4">Content Detection Analytics</MudText>
            <MudButton Variant="Variant.Outlined"
                      Color="Color.Primary"
                      StartIcon="@Icons.Material.Filled.Refresh"
                      OnClick="@RefreshData"
                      Disabled="@_loading">
                Refresh Data
            </MudButton>
        </MudStack>

        @if (_loading)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
        }

        <!-- Overview Stats -->
        <MudPaper Class="pa-4" Elevation="2">
            <MudStack Spacing="3">
                <MudText Typo="Typo.h6" Color="Color.Primary">Overview</MudText>

                <!-- Total Checks (no bar) -->
                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                    <MudIcon Icon="@Icons.Material.Filled.Dataset" Color="Color.Primary" />
                    <MudText Typo="Typo.body1" Style="flex: 1;">Total Checks</MudText>
                    <MudText Typo="Typo.h6">@_totalContentChecks</MudText>
                </MudStack>

                <MudDivider />

                <!-- Spam Detected (with bar) -->
                <MudStack Spacing="1">
                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                        <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Error" />
                        <MudText Typo="Typo.body1" Style="flex: 1;">Spam Detected</MudText>
                        <MudText Typo="Typo.h6">@_spamDetected</MudText>
                    </MudStack>
                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2" Style="padding-left: 40px;">
                        <MudProgressLinear Color="Color.Error"
                                          Value="@_spamPercentage"
                                          Size="Size.Medium"
                                          Style="flex: 1;" />
                        <MudText Typo="Typo.body2" Color="Color.Error" Style="min-width: 60px; text-align: right;">
                            @_spamPercentage.ToString("F1")%
                        </MudText>
                    </MudStack>
                </MudStack>

                <MudDivider />

                <!-- Stop Words (with bar) -->
                <MudStack Spacing="1">
                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                        <MudIcon Icon="@Icons.Material.Filled.Block" Color="Color.Secondary" />
                        <MudText Typo="Typo.body1" Style="flex: 1;">Stop Words Enabled</MudText>
                        <MudText Typo="Typo.h6">@_enabledStopWords / @_totalStopWords</MudText>
                    </MudStack>
                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2" Style="padding-left: 40px;">
                        <MudProgressLinear Color="Color.Success"
                                          Value="@GetStopWordsPercentage()"
                                          Size="Size.Medium"
                                          Style="flex: 1;" />
                        <MudText Typo="Typo.body2" Color="Color.Success" Style="min-width: 60px; text-align: right;">
                            @GetStopWordsPercentage().ToString("F0")%
                        </MudText>
                    </MudStack>
                </MudStack>

                <MudDivider />

                <!-- Training Samples (with bar) -->
                <MudStack Spacing="1">
                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                        <MudIcon Icon="@Icons.Material.Filled.Psychology" Color="Color.Info" />
                        <MudText Typo="Typo.body1" Style="flex: 1;">Detection Results Used for Training</MudText>
                        <MudText Typo="Typo.h6">@_totalTrainingSamples</MudText>
                    </MudStack>
                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2" Style="padding-left: 40px;">
                        <MudProgressLinear Color="Color.Info"
                                          Value="@GetTrainingPercentage()"
                                          Size="Size.Medium"
                                          Style="flex: 1;" />
                        <MudText Typo="Typo.body2" Color="Color.Info" Style="min-width: 60px; text-align: right;">
                            @GetTrainingPercentage().ToString("F1")%
                        </MudText>
                    </MudStack>
                </MudStack>
            </MudStack>
        </MudPaper>

        <!-- Training Data Quality (from detection_results.used_for_training) -->
        <MudPaper Class="pa-4" Elevation="2">
            <MudStack Spacing="3">
                <MudText Typo="Typo.h6" Color="Color.Primary">Training Data Overview</MudText>
                <MudAlert Severity="Severity.Info">
                    Training data is now automatically managed from detection results marked as training samples.
                    View the <strong>Messages</strong> page to mark messages as spam/ham for training.
                </MudAlert>
                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudStack Spacing="2">
                            <MudStack Row="true" Justify="Justify.SpaceBetween">
                                <MudText Typo="Typo.body1">Total Training Samples</MudText>
                                <MudText Typo="Typo.body1" Class="font-weight-bold">@_totalTrainingSamples</MudText>
                            </MudStack>
                            <MudText Typo="Typo.caption" Color="Color.Info">
                                Loaded from detection_results table (used_for_training = true)
                            </MudText>
                        </MudStack>
                    </MudItem>
                </MudGrid>
            </MudStack>
        </MudPaper>


        <!-- Recent Activity -->
        @if (_recentContentChecks?.Any() == true)
        {
            <MudPaper Class="pa-4" Elevation="2">
                <MudStack Spacing="3">
                    <MudText Typo="Typo.h6" Color="Color.Primary">Recent Spam Checks</MudText>

                    <MudTable Items="@_recentContentChecks" Dense="true" Hover="true">
                        <HeaderContent>
                            <MudTh>Timestamp</MudTh>
                            <MudTh>Result</MudTh>
                            <MudTh>Confidence</MudTh>
                            <MudTh>Reason</MudTh>
                            <MudTh>User</MudTh>
                        </HeaderContent>
                        <RowTemplate>
                            <MudTd>@context.CheckTimestamp.ToString("MM/dd HH:mm:ss")</MudTd>
                            <MudTd>
                                <MudChip T="string" Size="Size.Small" Color="@(context.IsSpam ? Color.Error : Color.Success)">
                                    @(context.IsSpam ? "SPAM" : "HAM")
                                </MudChip>
                            </MudTd>
                            <MudTd>@context.Confidence%</MudTd>
                            <MudTd>
                                <MudText Style="max-width: 200px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                    @context.Reason
                                </MudText>
                            </MudTd>
                            <MudTd>@(context.UserId.ToString())</MudTd>
                        </RowTemplate>
                    </MudTable>
                </MudStack>
            </MudPaper>
        }

        <!-- System Health -->
        <MudPaper Class="pa-4" Elevation="2">
            <MudStack Spacing="3">
                <MudText Typo="Typo.h6" Color="Color.Primary">System Health</MudText>

                <MudGrid>
                    <MudItem xs="12" sm="6" md="3">
                        <MudCard>
                            <MudCardContent>
                                <MudStack AlignItems="AlignItems.Center" Spacing="1">
                                    <MudIcon Icon="@Icons.Material.Filled.Block" Color="Color.Secondary" />
                                    <MudText Typo="Typo.h6">@_totalStopWords</MudText>
                                    <MudText Typo="Typo.body2">Stop Words</MudText>
                                    <MudText Typo="Typo.caption" Color="@(_enabledStopWords > 0 ? Color.Success : Color.Warning)">
                                        @_enabledStopWords active
                                    </MudText>
                                </MudStack>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>

                    <MudItem xs="12" sm="6" md="3">
                        <MudCard>
                            <MudCardContent>
                                <MudStack AlignItems="AlignItems.Center" Spacing="1">
                                    <MudIcon Icon="@Icons.Material.Filled.ContentCopy" Color="Color.Info" />
                                    <MudText Typo="Typo.h6">@_totalSpamSamples</MudText>
                                    <MudText Typo="Typo.body2">Spam Samples</MudText>
                                    <MudText Typo="Typo.caption" Color="@(_totalSpamSamples > 10 ? Color.Success : Color.Warning)">
                                        @(_totalSpamSamples > 10 ? "Good coverage" : "Need more samples")
                                    </MudText>
                                </MudStack>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>

                    <MudItem xs="12" sm="6" md="3">
                        <MudCard>
                            <MudCardContent>
                                <MudStack AlignItems="AlignItems.Center" Spacing="1">
                                    <MudIcon Icon="@Icons.Material.Filled.Psychology" Color="Color.Primary" />
                                    <MudText Typo="Typo.h6">@_totalTrainingSamples</MudText>
                                    <MudText Typo="Typo.body2">Training Data</MudText>
                                    <MudText Typo="Typo.caption" Color="@GetTrainingDataHealthColor()">
                                        @GetTrainingDataHealthText()
                                    </MudText>
                                </MudStack>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>

                    <MudItem xs="12" sm="6" md="3">
                        <MudCard>
                            <MudCardContent>
                                <MudStack AlignItems="AlignItems.Center" Spacing="1">
                                    <MudIcon Icon="@Icons.Material.Filled.Analytics" Color="Color.Success" />
                                    <MudText Typo="Typo.h6">@_spamDetectionRate.ToString("F1")%</MudText>
                                    <MudText Typo="Typo.body2">Detection Rate</MudText>
                                    <MudText Typo="Typo.caption" Color="@(_spamDetectionRate > 0 ? Color.Success : Color.Info)">
                                        Last 24h
                                    </MudText>
                                </MudStack>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
                </MudGrid>
            </MudStack>
        </MudPaper>

        <!-- OpenAI Veto Analysis -->
        <MudPaper Class="pa-4" Elevation="2">
            <MudStack Spacing="3">
                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                    <MudIcon Icon="@Icons.Material.Filled.VerifiedUser" Color="Color.Success" />
                    <MudText Typo="Typo.h6">OpenAI False Positive Prevention</MudText>
                </MudStack>

                @if (_vetoAnalytics != null)
                {
                    <!-- Summary Alert -->
                    <MudAlert Severity="Severity.Success" Variant="Variant.Outlined">
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.body1">
                                OpenAI prevented <strong>@_vetoAnalytics.VetoedCount</strong> false positives
                                (<strong>@_vetoAnalytics.VetoRate.ToString("F1")%</strong> of detections) in the last 30 days.
                            </MudText>
                            <MudText Typo="Typo.caption" Color="Color.Default">
                                This shows how often OpenAI overrides other algorithms' spam flags to allow legitimate messages.
                            </MudText>
                        </MudStack>
                    </MudAlert>

                    <!-- Algorithm Veto Rates Table -->
                    @if (_vetoAnalytics.AlgorithmStats.Any())
                    {
                        <MudText Typo="Typo.subtitle1" Class="mt-2">
                            <strong>Algorithm Veto Rates</strong> - High veto rates indicate algorithms that may need threshold tuning
                        </MudText>

                        <MudSimpleTable Hover="true" Dense="true" Striped="true">
                            <thead>
                                <tr>
                                    <th>Algorithm</th>
                                    <th style="text-align: right;">Spam Flags</th>
                                    <th style="text-align: right;">Vetoed by OpenAI</th>
                                    <th style="text-align: right;">Veto Rate</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var stat in _vetoAnalytics.AlgorithmStats.Take(10))
                                {
                                    <tr>
                                        <td><strong>@stat.AlgorithmName</strong></td>
                                        <td style="text-align: right;">@stat.SpamFlagsCount</td>
                                        <td style="text-align: right;">@stat.VetoedCount</td>
                                        <td style="text-align: right;">
                                            <MudChip T="string" Size="Size.Small" Color="@GetVetoRateColor(stat.VetoRate)">
                                                @stat.VetoRate.ToString("F1")%
                                            </MudChip>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </MudSimpleTable>
                    }
                    else
                    {
                        <MudAlert Severity="Severity.Info">
                            No veto data available for the last 30 days. Vetoes occur when OpenAI overrides other algorithms' spam flags.
                        </MudAlert>
                    }

                    <!-- Recent Vetoed Messages (Collapsible) -->
                    @if (_vetoedMessages.Any())
                    {
                        <MudExpansionPanels Class="mt-2">
                            <MudExpansionPanel Text="@($"Recent Vetoed Messages ({_vetoedMessages.Count})")">
                                <MudText Typo="Typo.caption" Class="mb-2">
                                    These messages were flagged as spam by detection algorithms but OpenAI determined they were legitimate.
                                </MudText>
                                <MudSimpleTable Hover="true" Dense="true">
                                    <thead>
                                        <tr>
                                            <th>Time</th>
                                            <th>Message Preview</th>
                                            <th>Spam Checks Triggered</th>
                                            <th style="text-align: right;">OpenAI Confidence</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var msg in _vetoedMessages.Take(20))
                                        {
                                            <tr>
                                                <td style="white-space: nowrap;">@msg.DetectedAt.ToString("g")</td>
                                                <td style="max-width: 400px; overflow: hidden; text-overflow: ellipsis;">
                                                    @msg.MessagePreview
                                                </td>
                                                <td>
                                                    <MudStack Row="true" Spacing="1">
                                                        @foreach (var check in msg.ContentCheckNames.Take(3))
                                                        {
                                                            <MudChip T="string" Size="Size.Small" Color="Color.Warning">@check</MudChip>
                                                        }
                                                        @if (msg.ContentCheckNames.Count > 3)
                                                        {
                                                            <MudChip T="string" Size="Size.Small" Color="Color.Default">+@(msg.ContentCheckNames.Count - 3) more</MudChip>
                                                        }
                                                    </MudStack>
                                                </td>
                                                <td style="text-align: right;">
                                                    <MudChip T="string" Size="Size.Small" Color="Color.Success">@msg.OpenAIConfidence%</MudChip>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </MudSimpleTable>
                            </MudExpansionPanel>
                        </MudExpansionPanels>
                    }
                }
                else
                {
                    <MudAlert Severity="Severity.Info">
                        Loading veto analytics...
                    </MudAlert>
                }
            </MudStack>
        </MudPaper>
    </MudStack>
</MudContainer>

@code {
    [Parameter] public List<long> SelectedChatIds { get; set; } = [];

    private bool _loading = true;

    // Overview statistics
    private int _totalContentChecks;
    private int _spamDetected;
    private double _spamPercentage;
    private int _totalStopWords;
    private int _enabledStopWords;
    private int _totalTrainingSamples;
    private int _totalSpamSamples;
    private double _spamDetectionRate;

    // Detailed data
    private List<ContentCheckRecord>? _recentContentChecks;

    // OpenAI veto analytics
    private OpenAIVetoAnalytics? _vetoAnalytics;
    private List<VetoedMessage> _vetoedMessages = [];

    protected override async Task OnInitializedAsync()
    {
        await LoadAnalytics();
    }

    private async Task RefreshData()
    {
        await LoadAnalytics();
    }

    private async Task LoadAnalytics()
    {
        _loading = true;
        try
        {
            // Load all data in parallel
            var stopWordsTask = LoadStopWordsStats();
            var trainingCountTask = LoadTrainingCount();
            var contentChecksTask = LoadContentCheckStats();
            var vetoAnalyticsTask = LoadVetoAnalytics();

            await Task.WhenAll(stopWordsTask, trainingCountTask, contentChecksTask, vetoAnalyticsTask);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading analytics: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task LoadStopWordsStats()
    {
        try
        {
            var allStopWords = await StopWordsRepository.GetAllStopWordsAsync();
            _totalStopWords = allStopWords.Count();

            var enabledStopWords = await StopWordsRepository.GetEnabledStopWordsAsync();
            _enabledStopWords = enabledStopWords.Count();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Failed to load stop words statistics: {ex.Message}", Severity.Warning);
        }
    }

    private async Task LoadTrainingCount()
    {
        try
        {
            // Query detection_results for training data count (used_for_training = true)
            await using var context = await DbContextFactory.CreateDbContextAsync();
            _totalTrainingSamples = await context.DetectionResults
                .AsNoTracking()
                .CountAsync(dr => dr.UsedForTraining);

            _totalSpamSamples = await context.DetectionResults
                .AsNoTracking()
                .CountAsync(dr => dr.UsedForTraining && dr.IsSpam);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Failed to load training data count: {ex.Message}", Severity.Warning);
        }
    }

    private async Task LoadContentCheckStats()
    {
        try
        {
            // Query detection_results table instead of obsolete spam_checks table
            var recentDetections = await MessageStatsService.GetRecentDetectionsAsync();
            _recentContentChecks = recentDetections.Take(20).Select(d => new ContentCheckRecord(
                Id: d.Id,
                CheckTimestamp: d.DetectedAt,
                UserId: d.UserId,
                ContentHash: null,
                IsSpam: d.IsSpam,
                Confidence: d.Confidence,
                Reason: d.Reason ?? $"{d.DetectionMethod} detection",
                CheckType: d.DetectionMethod,
                MatchedMessageId: d.MessageId
            )).ToList();

            var stats = await MessageStatsService.GetDetectionStatsAsync();
            _totalContentChecks = stats.TotalDetections;
            _spamDetected = stats.SpamDetected;
            _spamPercentage = stats.SpamPercentage;
            _spamDetectionRate = stats.Last24hSpamPercentage;
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Failed to load spam detection statistics: {ex.Message}", Severity.Warning);
        }
    }

    private double GetStopWordsPercentage()
    {
        return _totalStopWords > 0
            ? (_enabledStopWords / (double)_totalStopWords * 100.0)
            : 0;
    }

    private double GetTrainingPercentage()
    {
        return _totalContentChecks > 0
            ? (_totalTrainingSamples / (double)_totalContentChecks * 100.0)
            : 0;
    }

    private Color GetTrainingDataHealthColor()
    {
        return _totalTrainingSamples switch
        {
            >= 100 => Color.Success,
            >= 50 => Color.Warning,
            _ => Color.Error
        };
    }

    private string GetTrainingDataHealthText()
    {
        return _totalTrainingSamples switch
        {
            >= 100 => "Excellent",
            >= 50 => "Good",
            >= 20 => "Basic",
            _ => "Insufficient"
        };
    }

    private async Task LoadVetoAnalytics()
    {
        try
        {
            // Get veto analytics for last 30 days
            var since = DateTimeOffset.UtcNow.AddDays(-30);
            _vetoAnalytics = await DetectionResultsRepository.GetOpenAIVetoAnalyticsAsync(since);
            _vetoedMessages = await DetectionResultsRepository.GetRecentVetoedMessagesAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Failed to load veto analytics: {ex.Message}", Severity.Warning);
        }
    }

    private Color GetVetoRateColor(decimal rate)
    {
        return rate switch
        {
            >= 15 => Color.Error,      // Red: >15% (too aggressive)
            >= 10 => Color.Warning,    // Yellow: 10-15% (review)
            _ => Color.Success          // Green: <10% (good)
        };
    }

}