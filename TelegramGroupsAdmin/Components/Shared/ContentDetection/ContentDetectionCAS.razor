@inject IConfigService ConfigService
@inject ISnackbar Snackbar

<MudPaper Class="pa-4" Elevation="1">
    <MudStack Spacing="3">
        <MudText Typo="Typo.h6" Color="Color.Primary">CAS (Combot Anti-Spam)</MudText>

        @if (!IsGlobalView)
        {
            <!-- Override Toggle (only for chat-specific configs) -->
            <MudPaper Class="pa-3" Elevation="0" Style="background-color: var(--mud-palette-background-grey)">
                <MudSwitch T="bool" @bind-Value="_config.Cas.UseGlobal"
                          Label="@(_config.Cas.UseGlobal ? "Using Global Settings" : "Using Custom Settings")"
                          Color="@(_config.Cas.UseGlobal ? Color.Default : Color.Primary)" />
                @if (_config.Cas.UseGlobal)
                {
                    <MudText Typo="Typo.caption" Class="mt-1">
                        This chat is using the global CAS configuration. Toggle off to customize.
                    </MudText>
                }
            </MudPaper>
        }

        @{
            var activeConfig = (IsGlobalView || !_config.Cas.UseGlobal) ? _config.Cas : _globalConfig.Cas;
            var isReadOnly = !IsGlobalView && _config.Cas.UseGlobal;
            var activeTimeoutSeconds = (int)activeConfig.Timeout.TotalSeconds;
        }

        <MudSwitch T="bool" @bind-Value="activeConfig.Enabled"
                  Label="Enable CAS Check"
                  Color="Color.Primary"
                  Disabled="@isReadOnly" />

        @if (activeConfig.Enabled)
        {
            <MudTextField @bind-Value="activeConfig.ApiUrl"
                         Label="CAS API URL"
                         Disabled="@isReadOnly"
                         HelperText="@(isReadOnly ? $"Using global value" : "API endpoint for CAS lookups")" />

            <MudNumericField @bind-Value="activeTimeoutSeconds"
                            Label="Timeout (seconds)"
                            Min="1" Max="30"
                            Disabled="@isReadOnly"
                            HelperText="@(isReadOnly ? $"Using global value: {activeTimeoutSeconds}s" : "Request timeout for CAS API calls")" />

            <MudTextField @bind-Value="activeConfig.UserAgent"
                         Label="User Agent (Optional)"
                         Disabled="@isReadOnly"
                         HelperText="@(isReadOnly ? "Using global value" : "Custom User-Agent header for requests")" />
        }

        @if (!IsGlobalView && !_config.Cas.UseGlobal && _globalConfig.Cas.Enabled != _config.Cas.Enabled)
        {
            <MudAlert Severity="Severity.Info" Dense="true">
                Global setting: @(_globalConfig.Cas.Enabled ? "Enabled" : "Disabled")
            </MudAlert>
        }
    </MudStack>
</MudPaper>

@code {
    [Parameter]
    public long? ChatId { get; set; }

    private ContentDetectionConfig _config = new();
    private ContentDetectionConfig _globalConfig = new();
    private bool IsGlobalView => ChatId is null or 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadConfiguration();
    }

    private async Task LoadConfiguration()
    {
        try
        {
            // Always load global config for comparison/fallback
            _globalConfig = await ConfigService.GetAsync<ContentDetectionConfig>(ConfigType.ContentDetection, 0)
                            ?? new ContentDetectionConfig();

            if (IsGlobalView)
            {
                // Editing global config directly
                _config = _globalConfig;
            }
            else
            {
                // Load chat-specific config (which may have UseGlobal flags set)
                var chatConfig = await ConfigService.GetAsync<ContentDetectionConfig>(ConfigType.ContentDetection, ChatId!.Value);
                _config = chatConfig ?? new ContentDetectionConfig();
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading configuration: {ex.Message}", Severity.Error);
            _config = new ContentDetectionConfig();
            _globalConfig = new ContentDetectionConfig();
        }
    }

    public ContentDetectionConfig GetConfig()
    {
        // Ensure global configs always have UseGlobal=true
        if (IsGlobalView)
        {
            _config.Cas.UseGlobal = true;
        }

        return _config;
    }
}
