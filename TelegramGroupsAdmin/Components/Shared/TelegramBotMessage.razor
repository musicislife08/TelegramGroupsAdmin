@* Single bot message bubble - left-aligned white bubble like Telegram *@

<div class="telegram-message-wrapper telegram-bot-message">
    <div class="telegram-message-bubble telegram-bubble-bot">
        <div class="telegram-message-text">@Text</div>
        <div class="telegram-message-time">@Time</div>
    </div>
</div>

<style>
    .telegram-message-wrapper {
        display: flex;
        margin-bottom: 8px;
        animation: telegram-fade-in 0.2s ease-out;
    }

    @@keyframes telegram-fade-in {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .telegram-bot-message {
        justify-content: flex-start;
    }

    .telegram-message-bubble {
        max-width: 85%;
        padding: 8px 12px 6px 12px;
        border-radius: 12px;
        position: relative;
        word-wrap: break-word;
    }

    .telegram-bubble-bot {
        background: #182533;
        color: white;
        border-bottom-left-radius: 4px;
    }

    .telegram-message-text {
        font-size: 15px;
        line-height: 1.4;
        white-space: pre-wrap;
        margin-bottom: 2px;
    }

    .telegram-message-time {
        font-size: 11px;
        color: #708499;
        text-align: right;
        margin-top: 2px;
    }
</style>

@code {
    [Parameter, EditorRequired]
    public string Text { get; set; } = string.Empty;

    [Parameter]
    public string Time { get; set; } = "8:52 PM";
}
