@* Reusable help icon tooltip component for contextual help text *@

<MudTooltip Delay="300" Duration="1000">
    <ChildContent>
        <MudIconButton
            Icon="@Icons.Material.Filled.HelpOutline"
            Size="Size.Small"
            Color="Color.Default"
            Class="@($"help-tooltip-icon {Class}")"
            Style="@Style" />
    </ChildContent>
    <TooltipContent>
        <MudText Typo="Typo.body2" Class="help-tooltip-text">
            @Text
        </MudText>
    </TooltipContent>
</MudTooltip>

@code {
    /// <summary>
    /// The help text to display in the tooltip
    /// </summary>
    [Parameter]
    public string Text { get; set; } = string.Empty;

    /// <summary>
    /// Additional CSS classes to apply to the icon button
    /// </summary>
    [Parameter]
    public string? Class { get; set; }

    /// <summary>
    /// Additional inline styles to apply to the icon button
    /// </summary>
    [Parameter]
    public string? Style { get; set; }
}
