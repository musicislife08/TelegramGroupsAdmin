@using TelegramGroupsAdmin.ContentDetection.Configuration
@using TelegramGroupsAdmin.ContentDetection.Repositories
@inject ISpamDetectionConfigRepository ConfigRepository
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <ContentDetectionAdvanced @ref="_advancedComponent" ChatId="@ChatId" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="SaveAndClose" Disabled="@_isSaving">
            @if (_isSaving)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" />
                <span class="ml-2">Saving...</span>
            }
            else
            {
                <text>Save</text>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public long? ChatId { get; set; }

    [Parameter]
    public string? InitialSection { get; set; }

    private ContentDetectionAdvanced? _advancedComponent;
    private bool _isSaving = false;

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private async Task SaveAndClose()
    {
        if (_isSaving || _advancedComponent == null) return;

        try
        {
            _isSaving = true;

            var config = _advancedComponent.GetConfig();

            if (ChatId.HasValue && ChatId.Value != 0)
            {
                await ConfigRepository.UpdateChatConfigAsync(ChatId.Value, config);
                Snackbar.Add("Chat advanced settings saved successfully", Severity.Success);
            }
            else
            {
                await ConfigRepository.UpdateGlobalConfigAsync(config);
                Snackbar.Add("Global advanced settings saved successfully", Severity.Success);
            }

            MudDialog.Close(DialogResult.Ok(true));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error saving advanced settings: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isSaving = false;
        }
    }
}
