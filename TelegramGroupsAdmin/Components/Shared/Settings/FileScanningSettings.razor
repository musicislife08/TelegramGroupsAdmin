    private string FormatBytes(long bytes)
    {
        string[] sizes = ["B", "KB", "MB", "GB", "TB"];
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }

    private async Task TestClamAvConnectionAsync()
    {
        _isTestingClamAv = true;
        _clamAvTestResult = string.Empty;

        try
        {
            var host = _config.Tier1.ClamAV.Host;
            var port = _config.Tier1.ClamAV.Port;
            var timeout = _config.Tier1.ClamAV.TimeoutSeconds;

            _clamAvTestResult = $"Testing connection to {host}:{port} (timeout: {timeout}s)...";
            StateHasChanged();
            await Task.Delay(100); // Brief delay to show "testing" message

            // Create a temporary ClamClient to test with current form values
            var testClient = new nClam.ClamClient(host, port);

            // Test ping (with cancellation token for timeout)
            using var cts = new CancellationTokenSource(TimeSpan.FromSeconds(timeout));
            await testClient.PingAsync(cts.Token);

            // Get version to confirm it's really working
            var version = await testClient.GetVersionAsync(cts.Token);

            _clamAvTestResult = $"✅ Connection successful! ClamAV version: {version} at {host}:{port}";
            _clamAvTestSeverity = Severity.Success;
        }
        catch (Exception ex)
        {
            _clamAvTestResult = $"❌ Connection failed: {ex.Message}\n\nHost: {_config.Tier1.ClamAV.Host}\nPort: {_config.Tier1.ClamAV.Port}\n\nTroubleshooting:\n- Check if ClamAV container is running\n- Verify host/port values match your Docker Compose\n- Check network connectivity between containers";
            _clamAvTestSeverity = Severity.Error;
        }
        finally
        {
            _isTestingClamAv = false;
        }
    }

