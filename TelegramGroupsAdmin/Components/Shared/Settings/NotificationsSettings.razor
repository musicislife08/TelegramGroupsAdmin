<MudStack Spacing="4">
    <!-- Email Notifications -->
    <MudPaper Class="pa-4">
        <MudText Typo="Typo.h6" GutterBottom="true">Email Notifications</MudText>
        <MudText Typo="Typo.body2" Class="mb-4">
            Configure which events trigger email notifications
        </MudText>

        <MudStack Spacing="3">
            <MudAlert Severity="Severity.Info" Dense="true">
                Email notifications are currently sent for:
                <ul class="my-2">
                    <li>Email verification (new account registration)</li>
                    <li>Password reset requests</li>
                    <li>Email address change confirmation</li>
                </ul>
            </MudAlert>

            <MudDivider />

            <MudText Typo="Typo.subtitle2" Class="mt-2">Future Notification Types</MudText>

            <MudSwitch @bind-Value="_notifyOnSpamDetected"
                      Label="High-confidence spam detected"
                      Color="Color.Primary"
                      Disabled="true" />

            <MudSwitch @bind-Value="_notifyOnAutoban"
                      Label="User auto-banned"
                      Color="Color.Primary"
                      Disabled="true" />

            <MudSwitch @bind-Value="_notifyOnReportsQueued"
                      Label="New reports queued for review"
                      Color="Color.Primary"
                      Disabled="true" />

            <MudSwitch @bind-Value="_notifyOnNewUser"
                      Label="New user joined managed chat"
                      Color="Color.Primary"
                      Disabled="true" />

            <MudSwitch @bind-Value="_notifyOnSystemErrors"
                      Label="System errors and warnings"
                      Color="Color.Primary"
                      Disabled="true" />

            <MudAlert Severity="Severity.Warning" Dense="true">
                Additional notification types are planned for a future release.
                Currently, all email notifications are system-generated and cannot be disabled.
            </MudAlert>
        </MudStack>
    </MudPaper>

    <!-- Telegram Notifications -->
    <MudPaper Class="pa-4">
        <MudText Typo="Typo.h6" GutterBottom="true">Telegram Notifications</MudText>
        <MudText Typo="Typo.body2" Class="mb-4">
            Configure Telegram alerts and mentions
        </MudText>

        <MudStack Spacing="3">
            <MudAlert Severity="Severity.Success" Dense="true">
                Telegram notifications are currently active:
                <ul class="my-2">
                    <li><strong>@@admin mentions</strong> - Admins tagged in messages receive alerts</li>
                    <li><strong>Report queue</strong> - Borderline spam messages queued for review</li>
                    <li><strong>Welcome system</strong> - DMs sent to new users (with chat fallback)</li>
                </ul>
            </MudAlert>

            <MudDivider />

            <MudText Typo="Typo.subtitle2" Class="mt-2">Future Telegram Alert Types</MudText>

            <MudSwitch @bind-Value="_telegramNotifyOnAutoban"
                      Label="Notify admins when user is auto-banned"
                      Color="Color.Primary"
                      Disabled="true" />

            <MudSwitch @bind-Value="_telegramNotifyOnSystemEvents"
                      Label="Notify admins of system events (errors, health checks)"
                      Color="Color.Primary"
                      Disabled="true" />

            <MudAlert Severity="Severity.Warning" Dense="true">
                Additional Telegram notification types are planned for a future release.
            </MudAlert>
        </MudStack>
    </MudPaper>

    <!-- Webhook Notifications -->
    <MudPaper Class="pa-4">
        <MudText Typo="Typo.h6" GutterBottom="true">Webhook Notifications</MudText>
        <MudText Typo="Typo.body2" Class="mb-4">
            Send events to external services via webhooks
        </MudText>

        <MudStack Spacing="3">
            <MudSwitch @bind-Value="_webhooksEnabled"
                      Label="Enable Webhooks"
                      Color="Color.Primary"
                      Disabled="true" />

            <MudTextField @bind-Value="_webhookUrl"
                         Label="Webhook URL"
                         Variant="Variant.Outlined"
                         HelperText="HTTPS endpoint to receive event payloads"
                         Disabled="true"
                         Placeholder="https://your-service.com/webhooks/telegram-admin" />

            <MudTextField @bind-Value="_webhookSecret"
                         Label="Webhook Secret"
                         Variant="Variant.Outlined"
                         HelperText="Shared secret for request signature verification"
                         Disabled="true"
                         InputType="InputType.Password" />

            <MudAlert Severity="Severity.Info" Dense="true">
                Webhook notifications are planned for a future release (Phase 5+).
                This will enable integration with services like Discord, Slack, or custom dashboards.
            </MudAlert>
        </MudStack>
    </MudPaper>
</MudStack>

@code {
    // Email notification preferences (future)
    private bool _notifyOnSpamDetected = true;
    private bool _notifyOnAutoban = true;
    private bool _notifyOnReportsQueued;
    private bool _notifyOnNewUser;
    private bool _notifyOnSystemErrors = true;

    // Telegram notification preferences (future)
    private bool _telegramNotifyOnAutoban = true;
    private bool _telegramNotifyOnSystemEvents = true;

    // Webhook settings (future)
    private bool _webhooksEnabled;
    private string _webhookUrl = string.Empty;
    private string _webhookSecret = string.Empty;
}
