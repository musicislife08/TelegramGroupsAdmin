@page "/register"
@using System.Net.Http.Json
@using System.Text.Json
@using TelegramGroupsAdmin.Services
@inject HttpClient HttpClient
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject ILogger<Register> Logger
@attribute [AllowAnonymous]

<PageTitle>Register - Telegram Groups Admin</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-8">
    <MudPaper Elevation="4" Class="pa-8">
        <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">
            @(_isFirstRun ? "Setup Owner Account" : "Create Account")
        </MudText>
        <MudText Typo="Typo.body1" Align="Align.Center" Class="mb-6">
            @(_isFirstRun ? "Create the initial administrator account" : "Register with your invite code")
        </MudText>

        @if (_isFirstRun)
        {
            <MudAlert Severity="Severity.Info" Class="mb-4">
                No users exist. The first account will be created with Owner permissions.
            </MudAlert>

            <MudAlert Severity="Severity.Warning" Class="mb-4">
                <MudText Typo="Typo.body2" Class="mb-2">
                    <strong>Have a backup?</strong> You can restore from a previous backup instead of creating a new account.
                </MudText>
                <MudButton Variant="Variant.Text"
                           Color="Color.Primary"
                           StartIcon="@Icons.Material.Filled.SettingsBackupRestore"
                           Href="/restore">
                    Restore from Backup
                </MudButton>
            </MudAlert>
        }

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <MudAlert Severity="Severity.Error" Class="mb-4">@_errorMessage</MudAlert>
        }

        @if (_registrationSuccess)
        {
            <MudAlert Severity="Severity.Success" Class="mb-4">
                Account created successfully! You can now log in.
            </MudAlert>
        }

        @if (!_isFirstRun)
        {
            <MudTextField T="string"
                          Label="Invite Code"
                          @bind-Value="_inviteToken"
                          Variant="Variant.Outlined"
                          Class="mb-4"
                          Disabled="@(_isLoading || _registrationSuccess)" />
        }

        <MudTextField T="string"
                      Label="Email"
                      @bind-Value="_email"
                      Variant="Variant.Outlined"
                      Class="mb-4"
                      InputType="InputType.Email"
                      Disabled="@(_isLoading || _registrationSuccess)" />

        <MudTextField T="string"
                      Label="Password"
                      @bind-Value="_password"
                      Variant="Variant.Outlined"
                      Class="mb-4"
                      InputType="InputType.Password"
                      Disabled="@(_isLoading || _registrationSuccess)"
                      HelperText="Minimum 8 characters" />

        <MudTextField T="string"
                      Label="Confirm Password"
                      @bind-Value="_confirmPassword"
                      Variant="Variant.Outlined"
                      Class="mb-6"
                      InputType="InputType.Password"
                      Disabled="@(_isLoading || _registrationSuccess)" />

        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   FullWidth="true"
                   OnClick="@(async () => await HandleRegisterAsync())"
                   Disabled="@(_isLoading || _registrationSuccess)">
            @if (_isLoading)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" />
                <MudText Class="ml-2">Creating Account...</MudText>
            }
            else
            {
                <span>Create Account</span>
            }
        </MudButton>

        <MudDivider Class="my-6" />

        <MudText Typo="Typo.body2" Align="Align.Center">
            Already have an account?
            <MudLink Href="/login" Color="Color.Primary">Sign In</MudLink>
        </MudText>
    </MudPaper>
</MudContainer>

@code {
    private bool _isLoading;
    private bool _registrationSuccess;
    private bool _isFirstRun;
    private string _inviteToken = string.Empty;
    private string _email = string.Empty;
    private string _password = string.Empty; // Initialized as empty, never null
    private string _confirmPassword = string.Empty;
    private string? _errorMessage;

    [SupplyParameterFromQuery(Name = "invite")]
    private string? InviteQueryParam { get; set; }

    protected override async Task OnInitializedAsync()
    {
        _isFirstRun = await AuthService.IsFirstRunAsync();

        if (!string.IsNullOrEmpty(InviteQueryParam))
        {
            _inviteToken = InviteQueryParam;
        }
    }

    private async Task HandleRegisterAsync()
    {
        _isLoading = true;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            // Validate password is not null (form validation should prevent this)
            if (string.IsNullOrEmpty(_password))
            {
                _errorMessage = "Password is required";
                _isLoading = false;
                StateHasChanged();
                return;
            }

            // Check if first run for UI display
            var isFirstRun = await AuthService.IsFirstRunAsync();

            var response = await HttpClient.PostAsJsonAsync("/api/auth/register", new
            {
                Email = _email,
                Password = _password, // Already initialized as empty string, never null
                InviteToken = _inviteToken
            });

            var result = await response.Content.ReadFromJsonAsync<JsonElement>();

            if (!result.GetProperty("success").GetBoolean())
            {
                _errorMessage = result.TryGetProperty("error", out var error)
                    ? error.GetString()
                    : "Registration failed";
                return;
            }

            _registrationSuccess = true;
            StateHasChanged();

            // Wait a moment to show success message
            await Task.Delay(2000);

            // Redirect to login page
            Navigation.NavigateTo("/login", forceLoad: true);
        }
        catch (Exception ex)
        {
            _errorMessage = "An error occurred during registration. Please try again.";
            Logger.LogError(ex, "Unexpected error during registration for email {Email}", _email);
            _registrationSuccess = false;
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }
}
