@page "/reset-password"
@using TelegramGroupsAdmin.Services
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject ILogger<ResetPassword> Logger
@attribute [AllowAnonymous]

<PageTitle>Reset Password - Telegram Groups Admin</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-8">
    <MudPaper Elevation="4" Class="pa-8">
        <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">
            Set New Password
        </MudText>
        <MudText Typo="Typo.body1" Align="Align.Center" Class="mb-6">
            Choose a strong password for your account
        </MudText>

        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <MudAlert Severity="Severity.Error" Class="mb-4">@_errorMessage</MudAlert>
        }

        @if (_resetSuccess)
        {
            <MudAlert Severity="Severity.Success" Class="mb-4">
                Password reset successfully! Redirecting to login...
            </MudAlert>
        }

        @if (!_resetSuccess && !string.IsNullOrEmpty(_token))
        {
            <MudTextField T="string"
                          Label="New Password"
                          @bind-Value="_newPassword"
                          Variant="Variant.Outlined"
                          Class="mb-4"
                          InputType="InputType.Password"
                          Disabled="@_isLoading"
                          HelperText="Minimum 8 characters" />

            <MudTextField T="string"
                          Label="Confirm Password"
                          @bind-Value="_confirmPassword"
                          Variant="Variant.Outlined"
                          Class="mb-6"
                          InputType="InputType.Password"
                          Disabled="@_isLoading" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       FullWidth="true"
                       OnClick="@HandleResetPasswordAsync"
                       Disabled="@_isLoading">
                @if (_isLoading)
                {
                    <MudProgressCircular Size="Size.Small" Indeterminate="true" />
                    <MudText Class="ml-2">Resetting...</MudText>
                }
                else
                {
                    <span>Reset Password</span>
                }
            </MudButton>
        }
        else if (string.IsNullOrEmpty(_token))
        {
            <MudAlert Severity="Severity.Error" Class="mb-4">
                Invalid or missing reset token. Please request a new password reset link.
            </MudAlert>
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       FullWidth="true"
                       Href="/forgot-password">
                Request New Link
            </MudButton>
        }

        <MudDivider Class="my-6" />

        <MudText Typo="Typo.body2" Align="Align.Center">
            Remember your password?
            <MudLink Href="/login" Color="Color.Primary">Sign In</MudLink>
        </MudText>
    </MudPaper>
</MudContainer>

@code {
    private bool _isLoading;
    private bool _resetSuccess;
    private string? _token;
    private string _newPassword = string.Empty;
    private string _confirmPassword = string.Empty;
    private string? _errorMessage;

    [SupplyParameterFromQuery(Name = "token")]
    private string? TokenQueryParam { get; set; }

    protected override void OnInitialized()
    {
        _token = TokenQueryParam;
    }

    private async Task HandleResetPasswordAsync()
    {
        _isLoading = true;
        _errorMessage = null;
        StateHasChanged();

        try
        {
            if (string.IsNullOrWhiteSpace(_newPassword))
            {
                _errorMessage = "Password is required";
                return;
            }

            if (_newPassword.Length < 8)
            {
                _errorMessage = "Password must be at least 8 characters";
                return;
            }

            if (_newPassword != _confirmPassword)
            {
                _errorMessage = "Passwords do not match";
                return;
            }

            if (string.IsNullOrEmpty(_token))
            {
                _errorMessage = "Invalid reset token";
                return;
            }

            var success = await AuthService.ResetPasswordAsync(_token, _newPassword);

            if (!success)
            {
                _errorMessage = "Password reset failed. The link may have expired. Please request a new one.";
                return;
            }

            _resetSuccess = true;
            StateHasChanged();

            // Wait a moment to show success message
            await Task.Delay(2000);

            // Redirect to login
            Navigation.NavigateTo("/login?reset=success", forceLoad: true);
        }
        catch (Exception ex)
        {
            _errorMessage = "An error occurred. Please try again.";
            Logger.LogError(ex, "Unexpected error during password reset");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }
}
