DATABASE_URL=Host=localhost;Port=5432;Database=telegram_groups_admin;Username=tgadmin;Password=your_secure_password_here

# pgAdmin (optional)
PGADMIN_EMAIL=admin@localhost
PGADMIN_PASSWORD=your_pgadmin_password
